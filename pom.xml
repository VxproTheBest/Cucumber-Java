<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.cucumber</groupId>
	<artifactId>testng</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<properties>
		<cucumber.options>--plugin html:target/cucumber --tags @wip,@foo --features src/test/resources/features</cucumber.options>
	</properties>

	<repositories>
		<repository>
			<id>central</id>
			<name>cc0312dd18a9-releases</name>
			<url>https://artifactory.service.edp.t-mobile.com/artifactory/tmo-releases</url>
		</repository>
		<repository>
			<id>central2</id>
			<name>bintray</name>
			<url>http://jcenter.bintray.com</url>
		</repository>
		<repository>
			<id>snapshots</id>
			<name>cc0312dd18a9-snapshots</name>
			<url>https://artifactory.service.edp.t-mobile.com/artifactory/tmo-snapshots</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>com.tmobile.eqm.testfrwk.common</groupId>
			<artifactId>core_framework</artifactId>
			<version>1.5.4-RELEASE</version>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-core</artifactId>
			<version>2.3.1</version>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-java8</artifactId>
			<version>2.3.1</version>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-picocontainer</artifactId>
			<version>2.3.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-testng</artifactId>
			<version>2.3.1</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>3.8.1</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>3.8.1</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-firefox-driver</artifactId>
			<version>3.8.1</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19</version>
				<configuration>
					<suiteXmlFiles>
						<suiteXmlFile>${project.basedir}/src/test/resources/test.xml</suiteXmlFile>
					</suiteXmlFiles>
					<systemPropertyVariables>
						<!-- <cucumber.options>${cucumber.options}</cucumber.options> -->
						<webdriver.runlocal>false</webdriver.runlocal>
						<javax.net.ssl.trustStore>${project.basedir}/src/test/resources/certs/cacerts.jks</javax.net.ssl.trustStore>
						<javax.net.ssl.trustStorePassword>changeit</javax.net.ssl.trustStorePassword>
						<path.prefix>${project.build.directory}/test-classes</path.prefix>
					</systemPropertyVariables>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>